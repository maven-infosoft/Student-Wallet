@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Error";
}    

        <!-- Main content -->
        <section class="content">
            <div class="error-page">
                <h2 class="headline text-yellow"> Oops! &nbsp;</h2>
                <div class="error-content">
                    <h3><i class="fa fa-warning text-yellow"></i> @ViewBag.ErrorMessage</h3>
                    <p>
                        Meanwhile, you may <a href="@Url.Action("Index", "Home")">return to dashboard</a> or try using the search form.
                    </p>
                    <form class="search-form">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" name="submit" class="btn btn-warning btn-flat">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.input-group -->
                    </form>
                </div>
                <!-- /.error-content -->
            </div>
            <!-- /.error-page -->
        </section>