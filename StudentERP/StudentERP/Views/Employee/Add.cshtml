@model StudentERP.Models.Employee

@{
    ViewBag.Title = "Add";
}

@using (Html.BeginForm("Add_teacher", "Home", FormMethod.Post))
{
    <div class="dialog">
        <div class="panel-default">

            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Add Teacher</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.type)</td>

                    <td class="subheader">@Html.DropDownList("EmpType", (IEnumerable<SelectListItem>)ViewBag.emptype, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.type)</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.Password)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.Password)</td>

                    <td>@Html.ValidationMessageFor(m => m.Password)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.FirstName)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.FirstName)</td>

                    <td>@Html.ValidationMessageFor(m => m.FirstName)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.MiddleName)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.MiddleName)</td>

                    <td>@Html.ValidationMessageFor(m => m.MiddleName)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td>&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.LastName)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.LastName)</td>

                    <td>@Html.ValidationMessageFor(m => m.LastName)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td>&nbsp;</td>

                    <td class="subheader">
                        @Html.LabelFor(lbl => lbl.Birthdate)
                </td>

                <td class="subheader">@Html.TextBoxFor(txt => txt.Birthdate)</td>

                <td>@Html.ValidationMessageFor(m => m.Birthdate)</td>
            </tr>

            <tr>
                <td colspan="3">&nbsp;</td>
            </tr>

            <tr>
                <td>&nbsp;</td>

                <td class="subheader">@Html.LabelFor(lbl => lbl.Email)</td>

                <td class="subheader">@Html.TextBoxFor(txt => txt.Email)</td>

                <td>@Html.ValidationMessageFor(m => m.Email)</td>
            </tr>
            <tr>
                <td colspan="3">&nbsp;</td>
            </tr>
            <tr>
                <td>&nbsp;</td>

                <td class="subheader">@Html.LabelFor(lbl => lbl.Gender)</td>

                <td class="subheader">
                    @Html.RadioButtonFor(rb => rb.Gender, "male")Male
                @Html.RadioButtonFor(rb => rb.Gender, "female")Female
            </td>

            <td>@Html.ValidationMessageFor(m => m.Gender)</td>
        </tr>

        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>

        <tr>
            <td>&nbsp;</td>

            <td class="subheader">@Html.LabelFor(lbl => lbl.ContactNo)</td>

            <td class="subheader">@Html.TextBoxFor(txt => txt.ContactNo)</td>

            <td>@Html.ValidationMessageFor(m => m.ContactNo)</td>
        </tr>

        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>

        <tr>
            <td>&nbsp;</td>

            <td class="subheader">@Html.LabelFor(lbl => lbl.Address)</td>

            <td class="subheader">@Html.TextAreaFor(txt => txt.Address)</td>

            <td>@Html.ValidationMessageFor(m => m.Address)</td>
        </tr>

        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>

        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>
        <tr>
            <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
        </tr>

        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>
    </table>
</div>
</div>
}
