@model StudentERP.Models.AcademicYearStandardMapping

@{
    ViewBag.Title = "Add_Std_Map";
}

<h2>Add_Std_Map</h2>

@using (Html.BeginForm("Add_year_according_standard", "Home", FormMethod.Post))
{
    <div class="dialog">
    <div class="panel-default">
            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Add Acadamic Year According Standard</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.astd)</td>

                    <td class="subheader">@Html.DropDownList("Standard", (IEnumerable<SelectListItem>)ViewBag.stdlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.astd)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.ayear)</td>

                    <td class="subheader">@Html.DropDownList("AcadamicYear", (IEnumerable<SelectListItem>)ViewBag.yr, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.ayear)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.smonth)</td>

                    <td class="subheader">@Html.DropDownList("StartMonth", (IEnumerable<SelectListItem>)ViewBag.monthlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.smonth)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.emonth)</td>

                    <td class="subheader">@Html.DropDownList("EndMonth", (IEnumerable<SelectListItem>)ViewBag.monthlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.emonth)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
    </div>
</div>
}