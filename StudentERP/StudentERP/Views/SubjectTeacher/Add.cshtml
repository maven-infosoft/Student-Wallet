@model StudentERP.Models.SubjectTeacher

@{
    ViewBag.Title = "Add";
}

@using (Html.BeginForm("Add_Subject_teacher", "Home", FormMethod.Post))
{
    <div class="dialog">
        <div class="panel-default">
            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Add Subject Teacher</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.sub)</td>

                    <td class="subheader">@Html.DropDownList("Subject", (IEnumerable<SelectListItem>)ViewBag.sub, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.sub)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.tname)</td>

                    <td class="subheader">@Html.DropDownList("TeacherName", (IEnumerable<SelectListItem>)ViewBag.teacher, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.tname)</td>
                </tr>



                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.std)</td>

                    <td class="subheader">@Html.DropDownList("Standard", (IEnumerable<SelectListItem>)ViewBag.std, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.std)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.div)</td>

                    <td class="subheader">@Html.DropDownList("Division", (IEnumerable<SelectListItem>)ViewBag.div, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.div)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.acadyear)</td>

                    <td class="subheader">@Html.DropDownList("AcadamicYear", (IEnumerable<SelectListItem>)ViewBag.yr, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.acadyear)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
        </div>
    </div>
}