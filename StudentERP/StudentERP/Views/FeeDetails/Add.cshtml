@model StudentERP.Models.FeeDetail

@{
    ViewBag.Title = "Add";
}

@using (Html.BeginForm("Fees_according_standard_and_shift", "Home", FormMethod.Post))
{
    <div class="dialog">
        <div class="panel-default">
            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Fees</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;&nbsp;&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.std)</td>

                    <td class="subheader">@Html.DropDownList("Standard", (IEnumerable<SelectListItem>)ViewBag.std, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.std)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.shft)</td>

                    <td class="subheader">@Html.DropDownList("Shift", (IEnumerable<SelectListItem>)ViewBag.shift, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.shft)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.feehd)</td>

                    <td class="subheader">@Html.DropDownList("FeesHead", (IEnumerable<SelectListItem>)ViewBag.fh, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.feehd)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.ay)</td>

                    <td class="subheader">@Html.DropDownList("Year", (IEnumerable<SelectListItem>)ViewBag.yr, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.ay)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.fees)</td>

                    <td class="subheader">@Html.TextBoxFor(lbl => lbl.fees)</td>

                    <td>@Html.ValidationMessageFor(m => m.fees)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
        </div>
    </div>
}

