@model StudentERP.Models.State

@{
    ViewBag.Title = "Add";
}

@using (Html.BeginForm("Add_state", "Home", FormMethod.Post))
{
    <div class="dialog">
        <div class="panel-default">
            <table width="100%">
                <tr>
                    <th colspan="4" class="header">Add State</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.cntry)</td>

                    <td class="subheader">@Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.country, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.cntry)<span id="cnty"></span></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.stat)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.stat)</td>

                    <td>@Html.ValidationMessageFor(m => m.stat)<span id="st"></span></td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
        </div>
    </div>
}
